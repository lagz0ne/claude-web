{
  "name": "claude-ui",
  "version": "0.1.0",
  "description": "Web interface for Claude Agent SDK",
  "type": "module",
  "bin": {
    "claude-ui": "./server/src/cli.ts"
  },
  "files": [
    "server/src/**",
    "server/package.json",
    "web/dist/**"
  ],
  "scripts": {
    "dev": "bun run --parallel --filter '*' dev",
    "build": "cd web && bun run build",
    "prepublishOnly": "bun run build",
    "start": "bun run server/src/cli.ts",
    "start:server": "cd server && bun run src/index.ts"
  },
  "workspaces": [
    "server",
    "web"
  ],
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.39",
    "@pumped-fn/lite": "^2.0.0",
    "hono": "^4.11.9"
  },
  "devDependencies": {
    "claude-web-ui": "workspace:*",
    "vite": "^8.0.0-beta.13"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "claude",
    "anthropic",
    "agent",
    "sdk",
    "web-ui"
  ],
  "license": "MIT"
}
